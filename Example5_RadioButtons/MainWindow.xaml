<Window x:Class="Example5_RadioButtons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example5_RadioButtons"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RadioButton x:Name="rbBigger" Content="Bigger" HorizontalAlignment="Left" Margin="280,113,0,0" VerticalAlignment="Top" GroupName="Choice"/>
        <RadioButton x:Name="rbSmaller" Content="Smaller" HorizontalAlignment="Left" Margin="441,116,0,0" VerticalAlignment="Top" GroupName="Choice"/>
        <Button x:Name="btnCheck" Content="Check" HorizontalAlignment="Left" Margin="360,173,0,0" VerticalAlignment="Top" Width="75" Click="BtnCheck_Click"/>

    </Grid>
</Window>
